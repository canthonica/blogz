{% extends "base.html" %}

{% block content %}


           

    <hr />

    <h2>My Blogs</h2>

    <form action="/" method='POST'>

    
        {% if tasks|length == 0 %}
        <p>No blogs yet</p>
        {% else %}
        
            <ul>
                {% for task in tasks %}
                <li>{{task.title}}
                    <form method="POST" action="/blog" style="display:inline-block;">
                        <input type="hidden" name="task-id" value="{{task.id}}" />
                        <input type="submit" value="Done!" />
                    </form>
                    </li>
                    {% endfor %}
                </ul>
                <hr />

                <h2>My Blogs</h2>
            
                <ul>
                    {% for task in completed_tasks %}
                    <li>{{task.title}}</li>
                    {% endfor %}
                </ul>
        {% endif %}
{% endblock %}
