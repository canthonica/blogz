class Blog(db.Model):

    id = db.Column(db.Integer, primary_key=True)
    title = db.Column(db.String(120))
    body = db.Column(db.String(240))
    completed = db.Column(db.Boolean)

    def __init__(self, title):
        self.title = title
        #self.body = body
        self.completed = False

@app.route('/', methods=['POST', 'GET'])
